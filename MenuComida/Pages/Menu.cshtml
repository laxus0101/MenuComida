                margin: 0;
            }

        .menu-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .menu-item {
            background-color: #FFFFFF;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 1.5rem;
            transition: transform 0.2s;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .menu-item:hover {
                transform: scale(1.03);
            }

            .menu-item img {
                width: 100%;
                height: 180px;
                object-fit: cover;
                border-radius: 8px 8px 0 0;
            }

        .menu-content {
            padding: 1rem;
            text-align: center;
        }

        .menu-title {
            font-size: 1.2rem;
            color: var(--color-primario);
            margin: 0.5rem 0;
        }

        .menu-description {
            color: var(--color-secundario);
            margin: 0.5rem 0;
        }

        .menu-price {
            font-size: 1.1rem;
            font-weight: bold;
            color: var(--color-terciario);
        }

        .btn-red {
            background-color: #dc3545;
